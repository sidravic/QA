<!DOCTYPE html>
<html>
  <head>
    <title>easyQA | <%= yield(:title) %></title>
    <%= csrf_meta_tag %>
    <%= yield(:css)  %>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="container ">
      <div class="header">
        <h2> easyQA </h2>
        <div class="nav">
          <%= render "layouts/top_navigation" %>
        </div>
      </div>

      <%= render "layouts/flash_messages" %>

      <div class="container-section">
        <div class="left-section">
          <%= yield %>
        </div>

        <div class="right-section">          
          <%= yield(:right) %>
        </div>
      </div>
      
      <div class="footer">
        <div class="nav">
          <%= render "layouts/footer_navigation" %>
        </div>
      </div>
    </div>
  </body>
</html>
