<!DOCTYPE html>
<html>
  <head>
    <title> <%= yield(:title) %> | easyQA </title>
    <%= yield(:css)  %>
    <%= stylesheet_link_tag "application" %>        
    <%= javascript_include_tag :defaults %>
    <%= csrf_meta_tag %>
  </head>
  <body>
    <div class="container ">
      <div class="header">
        <h2> easyQA </h2>
        <div class="nav">
          <%= render "layouts/top_navigation" %>          
        </div>
      </div>
      <div class="section">
        <%= render "layouts/flash_messages" %>
        <%= yield %>
      </div>

      <div class="footer">
        <div class="nav round">
          <%= render "layouts/footer_navigation" %>
        </div>
      </div>
    </div>
  </body>
</html>
